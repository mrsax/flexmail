{% extends 'base.html.twig' %}

{% block title %}Hello WeatherForecastController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Forecast for {{ api.city.name }} : </h1>

    <div class="week-forecast">
        <ul>
            {% for day in  daily %}
                {% set info = {'data': day} %}
                <li>
                    {% include '/partials/forecast-day.html.twig' with info %}
                </li>
            {% endfor %}
        </ul>

    </div>



</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}
